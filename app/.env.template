# Agentic SQL Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
DEBUG=true
APP_NAME="Agentic SQL Backend"
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8008

# Database URLs
# MariaDB connection for company data
MARIADB_URL=mysql+aiomysql://user:password@localhost:3306/company_db

# PostgreSQL connection for agent memory
POSTGRES_URL=postgresql+asyncpg://user:password@localhost:5432/agent_memory

# AI Model Configuration
# Get your API key from https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# DeepSeek API Configuration (Fallback #2)
# Get your API key from https://platform.deepseek.com/
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_MODEL=deepseek-chat

# OpenAI API Configuration (Fallback #3)  
# Get your API key from https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION_NAME=sql_knowledge

# Security Settings
MAX_QUERY_TIMEOUT=30
MAX_ROWS_RETURNED=10000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Session Management
SESSION_TIMEOUT=3600
CACHE_TTL=1800

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Development Settings
RELOAD=true
WORKERS=1