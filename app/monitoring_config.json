{
  "metrics": {
    "system": [
      "query_latency_ms",
      "cache_hit_rate",
      "vector_search_time_ms",
      "model_response_time_ms",
      "error_rate"
    ],
    "business": [
      "queries_per_minute",
      "unique_users",
      "domain_distribution",
      "complexity_distribution"
    ]
  },
  "health_checks": {
    "endpoints": [
      "/health",
      "/health/ready",
      "/health/live"
    ],
    "checks": [
      "database_connection",
      "model_availability",
      "vector_store_access",
      "cache_functionality"
    ]
  },
  "alerts": {
    "critical": {
      "error_rate_threshold": 0.1,
      "latency_p99_threshold": 5000,
      "model_failure_threshold": 0.5
    },
    "warning": {
      "cache_hit_rate_threshold": 0.3,
      "vector_search_threshold": 500,
      "queue_depth_threshold": 100
    }
  }
}